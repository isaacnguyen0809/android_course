<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".unsplash.UnsplashApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Demo"
        tools:targetApi="31">

        <activity
            android:name=".unsplash.UnsplashMainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SecondActivity"
            android:exported="false" />

        <service
            android:name=".service.MyForegroundService"
            android:exported="false" />

        <service
            android:name=".service.DemoBoundService"
            android:exported="false" />

        <activity
            android:name="com.example.demo.content_provider.ContactsActivity"
            android:exported="true" />

        <provider
            android:name=".content_provider.StudentsProvider"
            android:authorities="com.example.demo.provider"
            android:exported="true" />

        <activity
            android:name=".SmsActivity"
            android:exported="false" />

        <receiver
            android:name=".SmsBroadCastReceiver"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BROADCAST_SMS">

        </receiver>

        <activity android:name=".fragments.DemoFragmentsActivity" />

        <activity android:name=".recycler_view.DemoRecyclerViewActivity" />
        <activity android:name="com.example.demo.customview.DemoCustomViewActivity" />
        <activity android:name="com.example.demo.shared_prefs.DemoSharedPrefs" />
    </application>

</manifest>
